@using chd.CaraVan.Contracts.Interfaces
@inject ISystemManager manager
<div class="reboot-container">
    <div class="reboot-button">
        <IconButton FAClass="power-off" OnClick="async()=>await manager.Reboot(this.Token)" />
    </div>
    <div class="reboot-text">
        Reboot
    </div>
</div>
@code {
    [Parameter] public CancellationToken Token { get; set; }
}