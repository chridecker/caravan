@using Blazored.Toast.Configuration
@using chd.Caravan.Mobile.UI.Interfaces
@inherits PageComponentBase<int,int>


<div class="page">
    <NavMenu />

    <main class="">
        <div class="top-row">
            <Header PageTitle="@this.Title"></Header>
        </div>
        <article id="main-article" class="content px-4">
            @Body
        </article>
    </main>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="5"
                MaxToastCount="3"
                RemoveToastsOnNavigation="true"
                ShowProgressBar="true">
    <CloseButtonContent>
        <div>
            <span>&times;</span>
        </div>
    </CloseButtonContent>
</BlazoredToasts>

@code {
    [Inject] IBLEManager bLEManager { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await this.bLEManager.StartAsync();
        await base.OnInitializedAsync();
    }
}